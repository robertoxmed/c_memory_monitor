CFLAGS = -Wall -g

CC=gcc $(CFLAGS)

BIN=./bin
SRC=./src
OBJ=./obj
INC=./include

EXEC=dummy_task rt_task

all: $(BIN)/$(EXEC)

$(BIN)/$(EXEC) : $(OBJ)/$(EXEC).o
	$(CC) $< -o $@

$(OBJ)/$(EXEC).o : $(SRC)/$(EXEC).c
	$(CC) -I $(INC) -c $< -o $@

tar:
	tar -cvf - ../$(TAR) | gzip >../$(TAR).tgz

clean:
	rm obj/*.o bin/*

package: clean tar
